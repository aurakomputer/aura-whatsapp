// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id        String   @id @default(uuid())
    email     String   @unique
    name      String?
    avatar    String?  @default("https://cdn.quasar.dev/img/boy-avatar.png")
    password  String
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt
    clients   Client[]
}

model Client {
    id          String        @id @default(uuid())
    name        String
    domain      String? // digunakan untuk menyimpan url yang di gunakan untuk validasi webhook
    phoneNumber String // menyimpan nomor wa
    createdAt   DateTime      @default(now())
    updatedAt   DateTime      @updatedAt
    quota       Int           @default(0)
    user        User?         @relation(fields: [userId], references: [id])
    userId      String
    AccessToken AccessToken[]
}

model AccessToken {
    id        String   @id @default(uuid())
    client    Client   @relation(fields: [clientId], references: [id])
    clientId  String
    name      String
    token     String
    expiresAt DateTime
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
